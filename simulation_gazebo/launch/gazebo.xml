<launch>
  <include
    file="$(find gazebo_ros)/launch/empty_world.launch" />
    
  <node
    name="spawn_model"
    pkg="gazebo_ros"
    type="spawn_entity.py"
    args="-entity manipulator -file $(find simulation_gazebo)/urdf/manipulator.urdf"
    output="screen">
  </node>

  <param command="ros2 launch robot_state_publisher robot_state_publisher.launch.py" />
  <param file="$(find simulation_gazebo)/config/manipulator.yaml" />
  <!-- load the controllers -->
  <node name="controller_spawner"
    pkg="controller_manager"
    type="spawner"
    output="screen" ns="/manipulator"
    args="joint_state_controller
      joint_1_controller
      joint_2_controller
      joint_3_controller
      joint_4_controller
      joint_5_controller"
  />
  <param name="robot_description"  value="$(cat $(find simulation_gazebo)/urdf/manipulator.urdf)" />
</launch>
